<form id="apply-form" class="bg-white p-8 rounded-xl shadow-sm border border-slate-200 mt-24">
    <h2 class="text-purple-900 font-semibold text-2xl lg:text-4xl tracking-tight mb-8">Apply for this job</h2>
    <div class="flex-col flex gap-4">
      <div class="w-full">
        <label for="name" class="sr-only">Name</label>
        <input
          id="name"
          type="text"
          name="name"
          placeholder="Name*"
          required
          class="block w-full px-4 py-3 rounded-lg text-sm text-slate-600 placeholder:text-slate-400 bg-slate-50 border-2 border-blue-200 focus:ring-2 focus:ring-blue-500"
        />
      </div>
      <div class="w-full">
        <label for="email" class="sr-only">Email</label>
        <input
          id="email"
          type="email"
          name="email"
          placeholder="Email address*"
          required
          class="block w-full px-4 py-3 rounded-lg text-sm text-slate-600 placeholder:text-slate-400 bg-slate-50 border-2 border-blue-200 focus:ring-2 focus:ring-blue-500"
        />
      </div>
      <div>
        <label for="linkedin" class="sr-only">LinkedIn URL</label>
        <input
          id="linkedin"
          type="url"
          name="linkedin"
          placeholder="LinkedIn URL"
          class="block w-full px-4 py-3 rounded-lg text-sm text-slate-600 placeholder:text-slate-400 bg-slate-50 border-2 border-blue-200 focus:ring-2 focus:ring-blue-500"
        />
      </div>
      <div>
        <label for="resume" class="sr-only">Resume</label>
        <input
          id="resume"
          type="file"
          name="resume"
          class="block w-full px-4 py-3 rounded-lg text-sm text-slate-600 placeholder:text-slate-400 bg-slate-50 border-2 border-blue-200 focus:ring-2 focus:ring-blue-500"
        />
      </div>
      <div>
        <label for="message" class="sr-only">Message</label>
        <textarea
          id="message"
          name="message"
          rows="4"
          placeholder="Your message"
          class="block w-full px-4 py-3 rounded-lg text-sm text-slate-600 placeholder:text-slate-400 bg-slate-50 border-2 border-blue-200 focus:ring-2 focus:ring-blue-500"
        ></textarea>
      </div>
    </div>
    
    <button
      type="submit"
      class="text-white w-full items-center font-medium gap-3 inline-flex focus-visible:outline-2 focus-visible:outline-offset-2 focus:outline-none justify-center px-6 ring-2 ring-transparent focus:ring-offset-2  focus:ring-blue-500 duration-200 py-3.5 rounded-full active:bg-blue-800 active:text-white bg-blue-500 hover:bg-blue-600 mt-8"
    >
      Apply
    </button>

    <div class="mt-4">
      <div class="flex items-center">
        <input
          id="privacy"
          name="privacy"
          type="checkbox"
          required
          class="size-4 rounded text-blue-600 focus:ring-blue-500"
        />
        <label for="privacy" class="ml-3 text-xs text-slate-500">
          By submitting this form, you agree to our
          <a href="/privacy" class="text-blue-600 hover:text-blue-500">Privacy Policy</a>
          and
          <a href="/terms" class="text-blue-600 hover:text-blue-500">Terms of Service</a>.
        </label>
      </div>
    </div>
  </form>

---
const { position, url, location, flag, team } = Astro.props;
---
<tr>
  <td class="whitespace-nowrap text-sm"
    ><a
      aria-label="your label"
      href={url}
      title={position}
      class="text-blue-500 hover:text-blue-600 font-medium"
      >{position}</a
    >
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-slate-500">{team} </td>
  <td
    class="whitespace-nowrap inline-flex items-center gap-3 px-3 py-4 text-sm text-slate-500">
    <span>
      <img
        src={flag}
        alt=""
      />
    </span>
    {location}</td
  >
</tr>
